<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.learningphrases.MainActivity">

    <GridLayout
        android:id="@+id/mgrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/hello"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="hello"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="translate" />

        <Button
            android:id="@+id/howareyou"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="howareyou"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="translate" />

        <Button
            android:id="@+id/goodevening"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="goodevening"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="translate" />

        <Button
            android:id="@+id/please"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="please"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="translate" />

        <Button
            android:id="@+id/mynameis"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="mynameis"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="translate" />

        <Button
            android:id="@+id/doyouspeakenglish"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="doyouspeakenglish"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="translate" />

        <Button
            android:id="@+id/welcome"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="welcome"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="translate" />

        <Button
            android:id="@+id/ilivein"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="ilivein"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="translate" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
